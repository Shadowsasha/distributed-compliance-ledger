[Unit]
Description=DC Ledger service
After=network.target
StartLimitIntervalSec=0

[Service]
User={{ cosmovisor.user }}
Group={{ cosmovisor.group }}
Type=simple
Restart=always
RestartSec=1
Environment="DAEMON_HOME={{ dcl_home }}" "DAEMON_NAME=dcld"
Environment="DAEMON_ALLOW_DOWNLOAD_BINARIES=true"
ExecStart={{ cosmovisor.path }} run start

StandardOutput=append:/var/log/cosmovisor/cosmovisor.log
StandardError=append:/var/log/cosmovisor/cosmovisor.log

[Install]
WantedBy=multi-user.target
